@model TaskItem
<h2 class="mb-4"><i class="bi bi-eye me-1"></i>Task Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>

        <p class="text-muted">@Model.Description</p>

        <hr />

        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Priority:</strong> @Model.Priority</p>
    </div>

    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="bi bi-pencil-square me-1"></i>Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash me-1"></i>Delete</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left me-1"></i>Back</a>
    </div>
</div>